<div class="readPost">
  <div class="imgInPost">
    <img src="<%= post.image %>" />
  </div>
  <h2><%= post.title %></h2>
  <p><%= post.content %></p>
</div>

<ul>
  comments <% post.comments.forEach(comment => { %>
  <li><%= comment.content %></li>
  <% }) %>
</ul>

<form action="/comment/create/<%= post.id %>" method="post">
  <input type="text" name="content" />
  <button type="submit">submit</button>
</form>
